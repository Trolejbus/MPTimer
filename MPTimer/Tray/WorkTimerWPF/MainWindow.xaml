<Window x:Class="WorkTimerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTimerWPF"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ShowInTaskbar="False" Visibility="Hidden">
    <Grid Background="#FF6C605A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <tb:TaskbarIcon
          IconSource="/icons/clock.ico"
          ToolTipText="hello world">

            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Times" IsEnabled="False"/>
                    <MenuItem x:Name="RunningTimeMenuItem" Header="Times" IsEnabled="False"/>
                    <MenuItem x:Name="LockTimeMenuItem" Header="Times" IsEnabled="False"/>
                    <MenuItem x:Name="WorkTimeMenuItem" Header="Times" IsEnabled="False"/>
                    <Separator />
                    <MenuItem Header="Close" Click="CloseButtonClick" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
